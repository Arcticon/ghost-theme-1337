<div class="container">
    <div class="row">
        {{#foreach posts}}
            {{#if featured}}
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <div class="card-header">
                            Featured
                        </div>
                        <div class="card-block">
                            <h4 class="card-title">{{title}}</h4>
                            <h6 class="card-subtitle text-muted">
                                <i class="fa fa-user" aria-hidden="true"></i> {{author.name}}
                                <br/>
                                <i class="fa fa-calendar" aria-hidden="true"></i> <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD.MMMM.YYYY"}}</time>
                            </h6>
                        </div>
                        {{#if image}}
                            <img src="{{image}}" width="100%" height="150" alt="Post Image">
                        {{else}}
                            <img src="{{asset "site/images/FeaturedBlogPostImage.png"}}" width="100%" height="150" alt="Post Image">
                        {{/if}}
                        <div class="card-block">
                            <p class="card-text">{{excerpt words="26"}}...</p>
                            <a href="{{url}}" class="btn btn-card">Read more...</a>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/foreach}}
    </div>

