<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 center">
			<nav aria-label="...">
				<ul class="pagination">
			        <li class="page-item{{#unless prev}} disabled{{/unless}}">
						<a class="page-link" href="{{page_url prev}}" tabindex="-1" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
							<span class="sr-only">Previous</span>
						</a>
					</li>
					<li class="page-item active">
						<a class="page-link">{{page}} <span class="sr-only">(current)</span></a>
					</li>
					<li class="page-item">
						<a class="page-link">&hellip;</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="/page/{{pages}}">{{pages}}</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="{{page_url next}}" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
							<span class="sr-only">Next</span>
						</a>
					</li>
				</ul>
			</nav>        
        </div>
    </div>
</div>