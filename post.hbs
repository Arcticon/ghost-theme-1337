{{!-- Links to Previous/Next posts --}}

<div class="container post">
	<div class="prev-next">

		<div class="col-lg-6 col-md-6 col-sm-12">
			{{#prev_post}}
				<h4>Previous</h4>
			    <a class="{{#if image}}" style="background-image: url({{image}}){{/if}}" href="{{url}}">
			        <section class="post">
			            <h2>{{title}}</h2>
			            <p>{{excerpt words="19"}}&hellip;</p>
			        </section>
			    </a>
		    {{/prev_post}}
		</div>
		
		<div class="col-lg-6 col-md-6 col-sm-12">
			{{#next_post}}
				<h4>Next</h4>
			    <a class="{{#if image}}" style="background-image: url({{image}}){{/if}}" href="{{url}}">
			        <section class="post">
			            <h2>{{title}}</h2>
			            <p>{{excerpt words="19"}}&hellip;</p>
			        </section>
			    </a>
		    {{else}}

		    {{/next_post}}
		</div>
		
	</div>
</div>

{{/post}}