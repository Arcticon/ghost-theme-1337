{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<div class="jumbotron jumbotron-fluid" role="main">
	<div class="container top">
		<h1>{{title}}</h1>
		<i class="fa fa-calendar" aria-hidden="true"></i> <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD.MMMM.YYYY"}}</time>
	</div>

	<div class="container">
		{{content}}
	</div>

	{{#author}}
		<div class="author">
			<div class="container">
				<div class="col-lg-2 col-md-6 col-sm-12">
					{{#if image}}
			            <a href="{{url}}"><img src="{{image}}" width="90" height="90" alt="{{name}}' Picture"></a>
			        {{else}}
			        	<a href="{{url}}"><img src="{{asset "site/images/AuthorImage.png"}}" width="90" height="90" alt="{{name}}' Picture"></a>
			        {{/if}}
	            </div>

		        
				<div class="col-lg-10 col-md-6 col-sm-12">
		            <h4>Author: <a href="{{url}}">{{name}}</a></h4>

		            {{#if bio}}
		                <p>{{bio}}</p>
		            {{/if}}
	                <p>Read <a href="{{url}}">more posts</a> by this author.</p>
		            <div class="author-meta">
		                {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
		                {{#if website}}<span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>{{/if}}
		            </div>
	            </div>
			</div>
		</div>

